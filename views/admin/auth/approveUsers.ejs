<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/admin/auth/approveUsers.css">
    <title>Admin - Approva Amministratori</title>
</head>
<body>
    <%- include('../components/header.ejs') %>
    <main>
        <div id="adminsList" class="approval-list">
            <%if(needApprovalAdmins != '') { %>
                <div id="cards">
                    <% needApprovalAdmins.forEach(function(admin) { %>
                        <div class="user-card">
                            <div class="user-card-header">
                                <h3>Utente: <%= admin.nome %> <%= admin.cognome %></h3>
                            </div>
                            <ul class="user-info">
                                <li><strong>Email:</strong> <%= admin.email %></li> 
                            </ul>
                            <div class="formField">
                                <form action="/admin/approvation" method="post">
                                    <input type="hidden" name="id" value="<%= admin._id %>">
                                    <label for="role">Ruolo:</label>
                                    <select name="role" id="role">
                                        <option value="admin">Admin</option>
                                        <option value="worker">Addetto scadenziario</option>
                                    </select>
                                    <div class="buttons">
                                        <input type="submit" class="approve-button" name="approve" value="Approva">
                                        <input type="submit" class="disapprove-button" name="disapprove" value="Disapprova">
                                    </div>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } else{ %>
                <h1>Non ci sono admin in attesa di approvazione</h1>
            <% } %>
        </div>
    </main>
</body>
</html>